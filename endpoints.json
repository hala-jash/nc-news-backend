{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/comments": {
    "description": "get all comments for an article.",
    "queries": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 4,
          "body": "I carry a log â€” yes. Is it funny to you? It is not to me.",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": -100,
          "created_at": "2020-02-23T12:01:00.000Z"
        }
      ]
    }
  },
  "post /api/articles/:article_id": {
    "description": "add a comment for an article",
    "queries": ["article_id", "username", "body"],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 19,
          "body": "One day I will be a great Coder leaving the world better with my coding skills",
          "article_id": 1,
          "author": "butter_bridge",
          "votes": 0,
          "created_at": "2023-11-22T11:20:15.876Z"
        }
      ]
    }
  },
  "patch /api/articles/:article_id": {
    "description": "update an article by article_id.",
    "queries": ["article_id", "inc_votes"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
